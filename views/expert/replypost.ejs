<%- include('../partials/header.ejs') %>





<% post.forEach((element,index) => { %>
 
    <div class=" p-1 m-1 mb-2 shadow" style="background-color: cornsilk; border: 1px rgb(215, 215, 215) solid;border-radius: 0.5rem;">
    
      <h4 class="m-1 mb-2"><%= element.name  %></h4>
      <p class="text-muted mx-1" style="font-size: 0.9rem;"><%= element.number %></p>
    
      <p class="m-1  text-wrap text-break"><%= element.chat  %></p>
    
    
    
    
      <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-inner">
    
          <% let firstImage = true; %>
          <% postimages.forEach(image => { %>
          <% if (image.id === element.id ) { %>
          <div class="carousel-item <%= firstImage ? 'active' : '' %>">
            <img style="object-fit: scale-down; width: 100%; max-width: 300px;" src="data:image/webpg;base64,<%= image.images.toString('base64') %>" alt="Image">
          </div>
          <% firstImage = false; %>
          <% } %>
          <% }) %>
    
    
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Next</span>
        </button>
      </div>
    
    
      <hr>
    
      <form action="/expertreply" method="post" hx-swap="outerHTML">
    
        <p class="text-muted m-0">ADD A ANSWER</p>
        <div class="mb-3">
          <textarea class="form-control" rows="" cols="" name="reply"></textarea>
          <input type="tel" value="<%= element.number %>" style="display: none;" name="number">
          <input type="number" value="<%= element.id %>" style="display: none;" name="id">
    
        </div>
        <div class="mb-3">
          <button class="mx-1 btn btn-primary btn-sm">Send</button>
    
        </div>
      </form>
    
    
    </div>
    
  
<% }) %>